<script>
  document.addEventListener("DOMContentLoaded", function() {
    const emailInput = document.getElementById("email");
    const passwordInput = document.getElementById("password");

    // Event listener for email input
    emailInput.addEventListener("input", function() {
      const emailError = document.getElementById("emailError");
      const emailValue = emailInput.value.trim(); // Trim whitespace

      const emailRegex = /^[a-zA-Z0-9._%+-]+@[a-zA-Z]+\.[a-zA-Z]{2,4}$/;
      if (!emailRegex.test(emailValue)) {
        emailError.textContent = 'Please enter a valid email address.';
        emailInput.classList.add("is-invalid");
      } else {
        emailError.textContent = '';
        emailInput.classList.remove("is-invalid");
      }
    });

    // Event listener for password input
    passwordInput.addEventListener("input", function() {
      const passwordError = document.getElementById("passwordError");
      const passwordValue = passwordInput.value;

      // Password validation(no spaces)
      if (passwordValue.includes(' ')) {
        passwordError.textContent = 'Password should not contain Spaces';
        passwordInput.classList.add("is-invalid");
        return;
      }

      if (passwordValue.length < 6) {
        passwordError.textContent = 'Password should contain at least 6 characters';
        passwordInput.classList.add("is-invalid");
      } else {
        passwordError.textContent = '';
        passwordInput.classList.remove("is-invalid");
      }
    });
  });
</script>





