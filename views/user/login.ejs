 <script>
  function validateForm() {
    console.log('askalda');
    document.getElementById('emailError').innerHTML = '';
    document.getElementById('passwordError').innerHTML = '';

    var email = document.getElementById('email').value;
    var password = document.getElementById('password').value;

    // Check if email is empty
    if (!email.trim()) {
      document.getElementById('emailError').innerHTML = 'Email address is required.';
      return false;
    }

    // Check if password is empty
    if (!password.trim()) {
      document.getElementById('passwordError').innerHTML = 'Password is required.';
      return false;
    }

    // Email validation using a more general regular expression
    const emailRegex = /^[a-zA-Z0-9._%+-]+@[a-zA-Z]+\.[a-zA-Z]{2,4}$/;
    if (!emailRegex.test(email)) {
      document.getElementById('emailError').innerHTML = 'Please enter a valid email address.';
      return false;
    }

    // Password validation (no spaces)
    if (password.includes(' ')) {
      document.getElementById('passwordError').innerHTML = 'Password should not contain spaces.';
      return false;
    }

    return true;
  }
</script>



