    <% if(locals.user){ %>
      <section class="gradient-custom mb-0">
        <div class="container">
          <div style="text-align: center;" >
            <h3>Track Your Orders</h3>
          </div>
          
          <div class="row">
         
            <div class="mb-5">
              <form action="/orders" method="get">
   
                <div class="form-group">
                  <label for="paymentMethod" style="font-size: small;">Payment method</label>
                  <select class="form-control" id="paymentMethod" name="payment">
                    <option value="" <% if (!payment) { %>selected<% } %>>All</option>
                    <option value="cod" <% if (payment === 'cod') { %>selected<% } %>>Cash on delivery</option>
                    <option value="wallet" <% if (payment === 'wallet') { %>selected<% } %>>Wallet</option>
                    <option value="razorPay" <% if (payment === 'razorPay') { %>selected<% } %>>RazorPay</option>
                  </select>
                </div>
              
                <button type="submit" class="btn btn-primary">Apply Filters</button>
              </form>
              

  </div>

      
            <!-- Order List Section -->
            <% if (orders.length > 0) { %>
            <div class="col-lg-10">
              <div class="card-body p-4">
                <% orders.forEach(order => { %>
                  <% if (order.status !== 'pending') { %>
                  <div class="col-md-12 mb-4">
                      <div class="card order-card">
                        <div>
                           <h5 class="card-header">#Order ID: <%= order.order_id %></h5>

                        </div>
                         
                       
                          <div class="card-body">
                            <div style="display: flex; justify-content: space-between;">
                              <% if (order.couponApplied === true){ %>
                                <div>
                                  <h5 class="card-title">Total Amount: ₹<%= order.totalDiscountAmount %></h5>
                                  <h5 class="card-title">Original Amount: <del style="color: red;"> ₹<%= order.total_amount %></del></h5>
                                    
                                </div>
                          
                              <div>
                                <h7 style="color: red;">Coupon Applied</h7>
                                <p>saved ₹<%= order.total_amount - order.totalDiscountAmount %> </p>

                              </div>
                                
                               <% }else{ %>
                                <h5 class="card-title">Total Amount: ₹<%= order.total_amount %></h5>
                                <% } %>
                            </div>
                             
                              <p class="card-text">Delivery Address: <%= order.delivery_address %></p>
                              <p class="card-text">Order Date: <%= moment(order.date).format('DD/MM/YYYY') %> <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Items: <%= order.items.length %> </span>  </p>   
                              <p class="card-text">Payment Method: <%= order.payment %></p>
                              <p class="card-text">Expected Delivery: <%= order.expected_delivery %></p>
                              
                              <!-- View Details Button -->
                              <a href="/single-order?orderId=<%= order._id %>" class="btn btn-primary btn-sm">View Details</a>
                              
                              <!-- Download Invoice Button (positioned in the right-bottom corner) -->
                             
                              <a href="/invoice?orderId=<%= order._id %>" class="btn btn-black" style="position:absolute; right: 10px;" target="_blank">Download Invoice</a>

                          </div>
                      </div>
                  </div>
                  <% } %>
              <% }) %>
              
              

                
                                <!-- Pagination -->
                                <div class="pagination mb-5" style="text-align: center;">
                                  <% if (currentPage > 1) { %>
                                    <a class="ms-5" href="?page=<%= currentPage - 1 %>&status=<%= status %>&payment=<%= payment %>"><button class="btn">Previous</button></a>
                                  <% } %>
                                  
                                  <% for (let i = 1; i <= totalPages; i++) { %>
                                    <% if (i === currentPage) { %>
                                      <a class="current-page" href="?page=<%= i %>&status=<%= status %>&payment=<%= payment %>"><button class="btn main"><%= i %></button></a>
                                    <% } else { %>
                                      <a href="?page=<%= i %>&status=<%= status %>&payment=<%= payment %>"><button class="btn"><%= i %></button></a>
                                    <% } %>
                                  <% } %>
                                
                                  <% if (currentPage < totalPages) { %>
                                    <a href="?page=<%= currentPage + 1 %>&status=<%= status %>&payment=<%= payment %>"><button class="btn">Next</button></a>
                                  <% } %>
                                </div>
                                
              </div>
            </div>
            


            <% }else{ %>
              <div class="col-lg-9" style="text-align: center; margin-top: 10%;">
                <h1>no orders found</h1>
              </div>
              <% } %>
          </div>
        </div>
      </section>
    <% }else{ %>
      <div class="mb-5 mt-5" style="text-align: center;">
           <h3>Please Login to see the orders</h3>
          <a href="/login"><button class="btn btn-primary" style="width: 100px;">Login</button>
              </a>        
      </div>
    <%}%>


