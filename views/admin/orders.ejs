                <div class="card mb-4">
                    
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div id="article-list">
                            <table class="table" id="example">
                                <thead style="width: 100%;">
                                    <tr>
                                        <th scope="col">order Id</th>
                                        <th scope="col">Item</th>
                                        <th scope="col">Customer</th>
                                        <th scope="col">Total Price</th>
                                        <th scope="col">Order Date</th>
                                        <th scope="col">Payment method</th>
                                        <th scope="col">Status</th>
                                        <th scope="col" class="text-end">Items</th>
                                        <!-- <th scope="col">Date</th> -->
                                    </tr>
                                </thead>
                              
                                <tbody class="list">
                                    <% orders.forEach(order => { %>
                                        <% order.items.forEach(item => { %>
                                            <% if (order.status !== 'pending') { %>

                                     <tr class="<%= order.couponApplied ? 'coupon-applied' : '' %>">
                                            <td><%= order.order_id %></td>
                                            <td>
                                                <a class="itemside" href="#">
                                                    <div class="left">
                                                        <img src="/ResizedImages/<%=item.product_id.image[0] %>" class="img-sm img-thumbnail" alt="" />
                                                    </div>
                                                    <div class="info">
                                                        <h6 class="mb-0"><%= item.product_id.name %></h6>
                                                    </div>
                                                </a>
                                            </td>
                                            <td class="text"><%=order.user_name %></td>
                                            
                                                <% if (order.couponApplied === true) { %>
                                                    <td> <del>₹<%= item.price * item.quantity %> </del> ₹<%= (item.price* item.quantity)-item.couponDiscountTotal %></td>
                                                 <% } else { %>
                                                   <td> ₹<%= item.price* item.quantity %> </td>
                                                 <% } %>
                                               
                                           
                                            <td> <%= moment(order.date).format('DD/MM/YYYY') %> <p hidden><%= order.date %></p></td>
                                        
                                         
                                          
                                            <td class="text-success" style="font-weight: 600;" ><%= order.payment %></td>
                                            <td>
                                                <select class="form-select statusSelector" name="statusSelector" onchange="updateOrderStatus(this.value, '<%= order._id %>', '<%= item._id %>')">
                                                    <option value="placed" <%= item.ordered_status === 'placed' ? 'selected' : '' %>>Placed</option>
                                                    <option value="shipped" <%= item.ordered_status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                    <option value="out_for_delivery" <%= item.ordered_status === 'out_for_delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                                    <option value="delivered" <%= item.ordered_status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                                    <option value="request_return" <%= item.ordered_status === 'request_return' ? 'selected' : '' %>>request Return</option>
                                                    <option value="returned" <%= item.ordered_status === 'returned' ? 'selected' : '' %>>Returned</option>
                                                    <option value="request_cancellation" <%= item.ordered_status === 'request_cancellation' ? 'selected' : '' %>>Request Cancellation</option>
                                                    <option value="cancelled" <%= item.ordered_status === 'cancelled' ? 'selected' : '' %>>cancelled</option>
                                                    <!-- Add other status options as needed -->
                                                </select>
                                            </td>
                                            
                                         
                                            <td class="text-end">
                                               <a href="/admin/order-details?orderId=<%= order._id %>&itemId=<%= item._id %>"
                                                ><button class="btn btn-light rounded btn-sm font-sm list-products" data-product-id="">item</button></a> 
                                            
                                                <!-- Button to show cancellation reason -->
                                                
                                                <% if (item.ordered_status === 'request_cancellation' || item.ordered_status === 'request_return') { %>
                                                   
                                                    <button class="btn btn-light rounded btn-sm font-sm show-reason" data-cancellation-reason="<%= item.cancellationReason %>">Reason</button>
                                                  
                                                <% } %>

                                           
                                            </div>
                                               
                                                   
                                            
                                            </td>
                                           
                                        </tr>
                                     <% } %>   
                                    <% }); %>
                                    <% }) %>
                                    
                                </tbody>
                            </table>
                            
                           
                        </div>
                        
                        
