                                            <tr>
                                                <td><b><%= categories[i].name %></b></td>
                                                <td><%= categories[i].description %></td>
                                                <td class="text">
                                                    <span id="status_<%= categories[i]._id %>">
                                                      <% if (categories[i].is_listed) { %>
                                                        <span class="badge rounded-pill alert-success">listed</span>
                                                      <% } else { %>
                                                        <span class="badge rounded-pill alert-warning">unlisted</span>
                                                      <% } %>
                                                      </td>
                                                
                                                      <td><a href="/admin/editCategories?categoriesId=<%= categories[i]._id %>" class="btn btn-light rounded-pill ps-3 pe-3 btn-sm">Edit</a></td>

                                                      <td>
                                                        <% if ( categories[i].offer ){%>

                                                            <button onclick="removeOffer('<%= categories[i]._id %>')"
                                                                class="btn btn-sm btn-outline-warning rounded font-sm">
                                                                Remove offer </button>
                                                                <p><%= categories[i].offer.name %>( <%= categories[i].offer.percentage %>% )</p>
                                                            <% } else {%>
                                                                <button class="btn btn-sm btn-outline-primary rounded
                                                             font-sm" onclick="showModal('<%= categories[i]._id %>')"> Apply offer
                                                                </button>
                                                                <p>No offers</p>
                                                                <% }%>
                                                    </td>


                                                      <td>
                                                        <button href="#" class="btn btn-outline-danger rounded-pill ps-3 pe-3 btn-sm delete-category"
                                                         data-toggle="modal" data-target="#deleteCategoryModal" data-category-id="<%= categories[i]._id %>">
                                                         Delete</button>
                                                       
                                                    </td> 
                                                
                                                      
                                                <td class="text-end">
                                                    <% if (categories[i].is_listed) { %>
                                                   
                                                        <button class="btn btn-danger rounded btn-sm font-sm unlist-categories" data-user-id="<%= categories[i]._id %>">Unlist</button>
                                                        <% } else { %>
                                                            <button class="btn btn-light rounded btn-sm font-sm list-categories" data-user-id="<%= categories[i]._id %>">List</button>
                                                        <% } %>
                                                    
                                                    <!-- dropdown //end -->
                                                </td>
                                            </tr>
                                            <% } %>
                                            <% } else { %>
                                              <tr>
                                                <td colspan="5" >Categories Not Found</td>
                                              </tr>
                                            <% } %>
                                         
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- .col// -->
                        </div>
                        <!-- .row // -->
                    </div>
                    <!-- card body .// -->
                </div>
