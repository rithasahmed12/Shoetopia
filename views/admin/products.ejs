                <div class="card mb-4">
                    
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div id="article-list">
                            <table class="table" id="example">
                                <thead style="width: 100%;">
                                    <tr>
                                        <th scope="col">Item</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Offer</th>
                                        <th scope="col">Date</th>
                                        <th scope="col" class="text-end">Action</th>
                                        <!-- <th scope="col">Date</th> -->
                                    </tr>
                                </thead>
                                <tbody class="list">
                                    <% products.forEach(product => { %>
                                        <tr>
                                            <td>
                                                <a class="itemside" href="#">
                                                    <div class="left">
                                                        <img src="/ResizedImages/<%=product.image[0] %>" class="img-sm img-thumbnail" alt="<%= product.name %>" />
                                                    </div>
                                                    <div class="info">
                                                        <h6 class="mb-0"><%= product.name %></h6>
                                                    </div>
                                                </a>
                                            </td>
                                            <td><%= product.category.name %></td>
                                            <td><%= product.price %></td>
                                        
                                            <td class="text">
                                                <span id="status_<%= product._id %>">
                                                  <% if (product.is_listed) { %>
                                                    <span class="badge rounded-pill alert-success">listed</span>
                                                  <% } else { %>
                                                    <span class="badge rounded-pill alert-warning">unlisted</span>
                                                  <% } %>
                                                  </td>
                                         
                                          
                                            <td class="text-success" style="font-weight: 600;" ><%= product.stockQuantity %></td>
                                            <td>
                                                <% if ( product.offer ){%>

                                                    <button onclick="removeOffer('<%= product._id %>')"
                                                        class="btn btn-sm btn-outline-warning rounded font-sm">
                                                        Remove offer </button>
                                                        <p><%= product.offer.name %>( <%= product.offer.percentage %>% )</p>
                                                    <% } else {%>
                                                        <button class="btn btn-sm btn-outline-primary rounded
                                                     font-sm" onclick="showModal('<%= product._id %>')"> Apply offer
                                                        </button>
                                                        <p>No offers</p>
                                                        <% }%>
                                            </td>
                                            <td class="text-success"><%= product.date %></td>
                                         
                                            <td class="text-end">
                                                <% if (product.is_listed) { %>
                                                <button class="btn btn-danger rounded btn-sm font-sm unlist-products" data-product-id="<%= product._id %>">Unlist</button>
                                                <% } else { %>
                                                <button class="btn btn-light rounded btn-sm font-sm list-products" data-product-id="<%= product._id %>">List</button>
                                                <% } %>
                                                <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                                    <div class="dropdown-menu">
                                                        <a href="/admin/editProducts?productId=<%= product._id %>" class="dropdown-item" href="#"><i class="material-icons md-edit"></i>Edit</a>
                                                        <a  class="dropdown-item text-danger delete-product" data-toggle="modal" data-target="#deleteProductModal" data-product-id="<%= product._id %>"><i class="material-icons md-delete_forever"></i>Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                           
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            
                           
                        </div>
                        
                        
                        <!-- itemlist  .// -->
      
                        <!-- itemlist  .// -->
                    </div>
                    <!-- card-body end// -->
                </div>
