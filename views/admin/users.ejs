<%- include('./adminLayouts/sideBar.ejs') %>

        <main class="main-wrap">
            <%- include('./adminLayouts/navBar.ejs') %> 
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Users List</h2>
                        
                    </div>
                   
                </div>
                <div class="card mb-4">
             
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="example" style="width: 100%;">
                                <thead>
                                    <tr>
                                      
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Mobile</th>
                                        <th scope="col">Status</th>
                                        <!-- <th scope="col">verified</th> -->
                                        <th scope="col" class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users.length > 0) { %>
                                        <% for (let i = 0; i < users.length; i++) { %> 
                                         <tr>
                                        
                                        <td><b><%= users[i].username %></b></td>
                                        <td><%= users[i].email %></td>
                                        <td><%= users[i].mobile %></td>
                                        <td class="text">
                                            <span id="status_<%= users[i]._id %>">
                                              <% if (users[i].is_blocked) { %>
                                                <span class="badge rounded-pill alert-warning">blocked</span>
                                              <% } else { %>
                                                <span class="badge rounded-pill alert-success">Active</span>
                                              <% } %>
                                      
                                          </td>
                                          
                                 
                                        <td class="text-end">
                                          <% if (users[i].is_blocked) { %>
                                            <button class="btn btn-md rounded font-sm unblock-user" data-user-id="<%= users[i]._id %>">Unblock</button>
                                            <% } else { %>
                                              <button class="btn btn-md rounded font-sm block-user" data-user-id="<%= users[i]._id %>" style="background-color: rgb(159, 0, 0);" >Block</button>
                                            <% } %>
                                          </td>
                                    </tr>
                                    <% } %>
                                    <% } else { %>
                                      <tr>
                                        <td colspan="5">Users Not Found</td>
                                      </tr>
                                    <% } %>

                                </tbody>
                            </table>
                        </div>
                        <!-- table-responsive //end -->
                    </div>
                    <!-- card-body end// -->

                </div>
                <!-- card end// -->
             
            </section>
            <!-- content-main end// -->
            <footer class="main-footer font-xs">
